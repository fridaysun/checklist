<div class="container" ng-controller="logController">
  <div class="page-header">
    <h2>Log <small>for Emulation/Validation checklist web app</small></h2>
  </div>
  
  <div class="row">
    <div >
      <h3>Project history:</h3>
      <table class="table table-hover table-condensed" >
        <thead>
          <th class="col-sm-1">#</th>
          <th class="col-sm-2">Date & Time</th>
          <th class="col-sm-3">Testcase</th>
          <th class="col-sm-5">Message</th>
          <th class="col-sm-1">Type</th>

        </thead>
        <tr ng-repeat="log in logs | orderBy:'version':1">
          <td class="col-sm-1">{{ log.version }}</td>
          <td class="col-sm-2">{{ log.date | date:'yyyy-MM-dd HH:mm:ss' }}</td>
          <td class="col-sm-3">{{ log.testcase_id }}</td>
          <td class="col-sm-5"><button uib-popover="{{ log.number + ', ' + log.testid + ', ' + log.items + ', ' + log.priority + ', ' + log.workload + ', ' + log.completed + ', ' + log.result + ', ' + log.rse + ', ' + log.comments + ', ' + log.stage + ', ' + log.percent + '%'}}" popover-trigger="mouseenter" type="button" class="btn btn-default">Details  <span class="badge">3</span></button></td>
          <th ng-class="{'result-fail': log.type == 'Delete', 'result-pass': log.type == 'New'}" class="col-sm-1">{{ log.type }}</th>

        </tr>
      </table>
      
            
    </div>
  </div>
  
</div> <!-- end of 1st container -->